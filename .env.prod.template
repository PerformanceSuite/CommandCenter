# Command Center Production Environment Configuration
# Copy this file to .env.prod and fill in the values

################################################################################
# Project Configuration
################################################################################
COMPOSE_PROJECT_NAME=commandcenter
DOMAIN=your-domain.com

################################################################################
# Database Configuration
################################################################################
DB_PASSWORD=CHANGE_ME_secure_db_password
POSTGRES_PORT=5432

################################################################################
# Application Configuration
################################################################################
SECRET_KEY=CHANGE_ME_long_random_secret_key_at_least_32_chars
ENVIRONMENT=production
LOG_LEVEL=INFO
LOG_FILE=/app/logs/commandcenter.log
JSON_LOGS=true

################################################################################
# API Keys and Tokens
################################################################################
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GITHUB_TOKEN=your_github_token
SLACK_TOKEN=

################################################################################
# Let's Encrypt Configuration
################################################################################
ACME_EMAIL=admin@your-domain.com

################################################################################
# Traefik Dashboard Authentication
# Generate with: htpasswd -nb admin your_password
################################################################################
TRAEFIK_DASHBOARD_USER=admin:$apr1$CHANGE_ME

################################################################################
# Monitoring Authentication
################################################################################
# Prometheus (generate with: htpasswd -nb admin your_password)
PROMETHEUS_USER=admin:$apr1$CHANGE_ME

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_secure_grafana_password

# Loki (generate with: htpasswd -nb admin your_password)
LOKI_USER=admin:$apr1$CHANGE_ME

################################################################################
# Backup Configuration
################################################################################
BACKUP_DIR=/path/to/backups
RETENTION_DAYS=30
BACKUP_CRON_SCHEDULE=0 2 * * *

################################################################################
# Service Ports (Internal)
################################################################################
REDIS_PORT=6379
BACKEND_PORT=8000
FRONTEND_PORT=3000

################################################################################
# Optional: Remote Backup Configuration (AWS S3)
################################################################################
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# S3_BACKUP_BUCKET=

################################################################################
# Optional: Remote Backup Configuration (Google Cloud Storage)
################################################################################
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json
# GCS_BACKUP_BUCKET=

################################################################################
# Feature Flags
################################################################################
ENABLE_METRICS=true
