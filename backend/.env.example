# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./commandcenter.db

# Security (CRITICAL: Change in production!)
SECRET_KEY=dev-secret-key-min-32-chars-change-in-production
ENCRYPT_TOKENS=true

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# RAG/Knowledge Base (Legacy)
KNOWLEDGE_BASE_PATH=../../rag_storage/chromadb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# KnowledgeBeast Integration (v2.3.2+)
# Note: Gradual rollout - set USE_KNOWLEDGEBEAST=true to enable
USE_KNOWLEDGEBEAST=false
KNOWLEDGEBEAST_DB_PATH=./kb_chroma_db
KNOWLEDGEBEAST_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Multi-Provider AI Routing (Research Agents)
# OpenRouter: Unified API for 200+ models (recommended for start)
OPENROUTER_API_KEY=sk-or-v1-...
# Direct provider access (optional)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=...
# Default provider and model
DEFAULT_AI_PROVIDER=openrouter
DEFAULT_MODEL=anthropic/claude-3.5-sonnet
