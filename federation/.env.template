# Federation Service - Production Environment Configuration
# Copy to .env and fill in actual values

# Database Configuration
# ----------------------
# IMPORTANT: Use a strong password for production
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
POSTGRES_PORT=5433

# NATS Configuration
# -------------------
NATS_PORT=4223
NATS_HTTP_PORT=8223

# Federation Service Configuration
# ----------------------------------
FEDERATION_PORT=8001
LOG_LEVEL=info

# API Authentication
# -------------------
# CRITICAL: Generate secure API keys for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Format: FEDERATION_API_KEYS=["key1","key2","key3"]
FEDERATION_API_KEYS=["CHANGE_ME_TO_ACTUAL_API_KEY"]

# Heartbeat Monitoring
# ---------------------
# Seconds without heartbeat before marking project offline
HEARTBEAT_STALE_THRESHOLD_SECONDS=90
# Interval for stale project cleanup job in seconds
HEARTBEAT_STALE_CHECK_INTERVAL_SECONDS=60

# Monitoring Configuration
# -------------------------
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001
# IMPORTANT: Change default Grafana admin password
GRAFANA_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
GRAFANA_ROOT_URL=http://localhost:3001

# Optional: External Services
# ----------------------------
# Uncomment and configure if using external database/NATS
# EXTERNAL_DATABASE_URL=postgresql+asyncpg://user:pass@host:port/db
# EXTERNAL_NATS_URL=nats://host:port
