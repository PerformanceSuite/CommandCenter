# federation/.env.example
DATABASE_URL=postgresql+asyncpg://commandcenter:password@postgres:5432/commandcenter_fed
NATS_URL=nats://nats:4222
LOG_LEVEL=info
SERVICE_PORT=8001

# API Authentication
# ------------------
# Comma-separated list of valid API keys for federation endpoints
# Example: FEDERATION_API_KEYS=["secret-key-1","secret-key-2"]
# Leave empty to disable authentication (NOT recommended for production)
FEDERATION_API_KEYS=[]

# Heartbeat Monitoring Configuration
# ------------------------------------
# Seconds without heartbeat before marking project offline (default: 90)
HEARTBEAT_STALE_THRESHOLD_SECONDS=90
# Interval for stale project cleanup job in seconds (default: 60)
HEARTBEAT_STALE_CHECK_INTERVAL_SECONDS=60

# Testing Configuration
# ----------------------
# Override for pytest - point to test database
# Example: TEST_DATABASE_URL=postgresql+asyncpg://commandcenter:changeme@localhost:5433/commandcenter_fed_test
TEST_DATABASE_URL=postgresql+asyncpg://commandcenter:changeme@localhost:5432/commandcenter_fed_test
