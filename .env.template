# ==============================================
# Command Center - Environment Configuration
# ==============================================

# Project Isolation
# ------------------
# CRITICAL: Use unique project name for each CommandCenter instance
# This ensures complete data isolation between projects
# Format: projectname-commandcenter (e.g., performia-commandcenter, clientx-commandcenter)
COMPOSE_PROJECT_NAME=commandcenter

# Database Configuration
# -----------------------
DATABASE_URL=postgresql://commandcenter:changeme@postgres:5432/commandcenter
DB_PASSWORD=changeme

# Security
# ---------
# Generate a secure random key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here

# Encryption salt for PBKDF2 key derivation
# Generate with: openssl rand -hex 32
# IMPORTANT: Must remain constant or encrypted tokens cannot be decrypted
ENCRYPTION_SALT=your-encryption-salt-here

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

# Encryption
ENCRYPT_TOKENS=true

# AI Model APIs
# --------------
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# GitHub Integration (Optional)
# ------------------------------
GITHUB_TOKEN=your-github-personal-access-token

# Slack Integration (Optional)
# ----------------------------
SLACK_TOKEN=your-slack-bot-token

# Redis Configuration
# -------------------
REDIS_URL=redis://redis:6379

# RAG Storage Paths
# -----------------
RAG_STORAGE_PATH=/app/rag_storage
CHROMADB_PATH=/app/rag_storage/chromadb

# MCP Memory Storage (for local development outside Docker)
# ---------------------------------------------------------
MCP_MEMORY_DIR=/Users/danielconnolly/.mcp-memory

# Application Settings
# --------------------
DEBUG=false
PYTHONUNBUFFERED=1

# Port Configuration
# ------------------
# Change these if ports are already in use on your system
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Frontend Configuration
# ----------------------
VITE_API_URL=http://localhost:8000
